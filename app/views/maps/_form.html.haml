= form_for(@map) do |f|

  %p
    Name : 

  %ul
    - @locations.each do |location|
      %li
        %input{:type => 'checkbox'}
        = location.name
        %br
        = location.latitude
        ,
        = location.longitude


  - if @map.errors.any?
    #error_explanation
      %h2
        = pluralize(@map.errors.count, "error") 
        prohibited this map from being saved:

      %ul
        - @map.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit
