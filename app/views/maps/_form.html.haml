= form_for(@map) do |f|

  %ul
    %li{"ng-repeat" => "location in locations"}
      %input{:type => 'checkbox', "ng-click" => "locationChecked(null, $event, location)"}
        {{location.name}}
        {{location.latitude}}
        {{location.longitude}}

  - if @map.errors.any?
    #error_explanation
      %h2
        = pluralize(@map.errors.count, "error") 
        prohibited this map from being saved:

      %ul
        - @map.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit
